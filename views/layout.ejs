<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | SkyNest Hotels</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-hotel me-2"></i>SkyNest Hotels
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath === '/' ? 'active' : '' %>" href="/">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/bookings') ? 'active' : '' %>" href="/bookings">
                            <i class="fas fa-calendar-check me-1"></i>Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/guests') ? 'active' : '' %>" href="/guests">
                            <i class="fas fa-users me-1"></i>Guests
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/rooms') ? 'active' : '' %>" href="/rooms">
                            <i class="fas fa-bed me-1"></i>Rooms
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/services') ? 'active' : '' %>" href="/services">
                            <i class="fas fa-concierge-bell me-1"></i>Services
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle <%= currentPath.startsWith('/reports') ? 'active' : '' %>" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-chart-bar me-1"></i>Reports
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/reports/occupancy">Room Occupancy</a></li>
                            <li><a class="dropdown-item" href="/reports/billing">Billing Summary</a></li>
                            <li><a class="dropdown-item" href="/reports/services">Service Usage</a></li>
                            <li><a class="dropdown-item" href="/reports/revenue">Revenue Report</a></li>
                            <li><a class="dropdown-item" href="/reports/top-services">Top Services</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/admin') ? 'active' : '' %>" href="/admin">
                            <i class="fas fa-cog me-1"></i>Admin
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>SkyNest Hotels</h5>
                    <p>Premium accommodation across Sri Lanka</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>&copy; 2024 SkyNest Hotels. All rights reserved.</p>
                    <p>Hotel Management System v1.0</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
</body>
</html>